{% extends 'admin.html.twig' %}
{% block title %}Cr√©ation de contacts{% endblock %}
{% block content %}
<div class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h3 class="text-2xl font-semibold mb-6 text-gray-800">Modifier le contact</h3>

    <a href="/contacts" class="text-blue-500 hover:text-blue-700 font-semibold mb-4 inline-block">
        <ion-icon name="arrow-back" class="mr-2"></ion-icon> Mes contacts
    </a>

    {# Flash messages #}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice bg-yellow-100 text-yellow-700 p-3 rounded-md mb-4">
            <ion-icon name="information-circle" class="inline mr-2"></ion-icon>{{ message }}
        </div>
    {% endfor %}

    {% for label, messages in app.flashes(['success', 'warning']) %}
        {% for message in messages %}
            <div class="flash-{{ label }} bg-{{ label == 'success' ? 'green' : 'yellow' }}-100 text-{{ label == 'success' ? 'green' : 'yellow' }}-700 p-3 rounded-md mb-4">
                <ion-icon name="{{ label == 'success' ? 'checkmark-circle' : 'warning' }}" class="inline mr-2"></ion-icon>{{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Form #}
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

    <div class="form-group">
        {{ form_label(form.fullname, null, {'attr': {'class': 'block text-gray-700 text-sm font-medium mb-2'}}) }}
        {{ form_widget(form.fullname, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, null, {'attr': {'class': 'block text-gray-700 text-sm font-medium mb-2'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone_number, null, {'attr': {'class': 'block text-gray-700 text-sm font-medium mb-2'}}) }}
        {{ form_widget(form.phone_number, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300'}}) }}
    </div>

    <div class="form-group mb-6">
        {{ form_label(form.status, null, {'attr': {'class': 'block text-gray-700 text-sm font-medium mb-2'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300'}}) }}
    </div>

    <div>
        {{ form_widget(form._token, {'attr': {'class': 'hidden'}}) }}
        <button type="submit" class="w-full py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 flex items-center justify-center">
            <ion-icon name="checkmark-done" class="mr-2"></ion-icon> Modifier
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
