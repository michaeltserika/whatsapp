{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <div class="flex justify-center mb-6">
            <img src={{ asset('images/logo.png') }} alt="logo" class="h-20" />
        </div>

        {% if error %}
            <div class="mb-4 text-red-600 text-center font-semibold">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <form method="POST" action="{{ path('app_login') }}" class="space-y-6">
            <div class="form-group">
                <label for="email" class="block text-sm font-medium text-gray-700">Email ou Identifiant</label>
                <input type="email" name="_username" id="email" placeholder="Email ou Identifiant" value="{{ last_username }}" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm" required />
            </div>

            <div class="form-group">
                <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="************" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent sm:text-sm" required />
            </div>
            
            {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}

            <div class="form-group">
                <button type="submit" class="w-full py-3 px-4 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition-colors duration-300">Connexion</button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <a href="{{ path('app_register') }}" class="text-sm font-medium text-blue-600 hover:text-blue-700 transition-colors duration-300">Cr√©er un compte</a>
        </div>
    </div>
</div>
{% endblock %}
